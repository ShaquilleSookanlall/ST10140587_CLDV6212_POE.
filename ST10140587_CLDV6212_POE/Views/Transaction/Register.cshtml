@model ST10140587_CLDV6212_POE.Models.Transaction

<h2>Register Transaction</h2>

<form asp-action="Register" method="post">
    <div class="form-group">
        <label for="Customer_Id">Customer</label>
        <select asp-for="Customer_Id" class="form-control" asp-items="@(new SelectList(ViewData["CustomersList"] as List<Customer>, "RowKey", "Customer_Name"))"></select>
    </div>

    <div class="form-group">
        <label for="Product_Id">Product</label>
        <select asp-for="Product_Id" class="form-control" asp-items="@(new SelectList(ViewData["ProductsList"] as List<Product>, "RowKey", "Product_Name"))"></select>
    </div>

    <div class="form-group">
        <label for="Transaction_Date">Transaction Date</label>
        <input asp-for="Transaction_Date" class="form-control" type="datetime-local" />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
